	pod ‘Firebase/Firestore’
	pod "PromiseKit" , “~>4.0”
	pod 'Stripe'
	pod ‘Alamofire’
	pod 'SendGrid', :git => 'https://github.com/scottkawai/sendgrid-swift.git'

	use_frameworks!



  # Pods for Hotel Applicaiton
  target 'Hotel ApplicaitonTests' do
    inherit! :search_paths
    # Pods for testing
  end
  target 'Hotel ApplicaitonUITests' do
    inherit! :search_paths
    # Pods for testing
  end
end
